{
  "name": "@apus-run/monorepo",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@7.27.0",
  "description": "Collection of essential React Hooks; Collection of essential Vue Composition Utilities.",
  "author": "moocss<https://github.com/moocss>",
  "license": "MIT",
  "scripts": {
    "start:web-vue": "pnpm -F=@apus-run/playgrounds-vue run dev",
    "start:web-react": "pnpm -F=@apus-run/playgrounds-react run dev",
    "build:web": "pnpm -F=@apus-run/playgrounds-react run build && pnpm -F=@apus-run/playgrounds-vue run build",
    "build:lib": "pnpm -F=@apus-run/react-hooks run build && pnpm -F=@apus-run/vue-hooks run build",
    "clean": "rimraf dist packages/*/dist node_modules packages/*/node_modules",
    "lint": "eslint . --ext .js,mjs,.ts,.tsx --cache",
    "lint:fix": "pnpm lint --fix"
  },
  "dependencies": {
    "@apus-run/vue-hooks": "workspace:*",
    "@apus-run/react-hooks": "workspace:*",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "vue": "^3.2.47"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.2.3",
    "@vitejs/plugin-react": "^4.0.0",
    "@types/node": "^20.3.1",
    "@types/react": "^18.2.12",
    "@types/react-dom": "^18.0.10",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.1",
    "vite": "^4.3.9",
    "vite-plugin-dts": "^2.3.0",
    "vue-tsc": "^1.6.5",
    "typescript": "^5.1.3"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*": "prettier --write --ignore-unknown --cache",
    "*.{ts,tsx,mjs,js,jsx}": "eslint --cache --fix"
  }
}
